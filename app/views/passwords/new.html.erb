<div class="relative flex items-center justify-center min-h-screen bg-gradient-to-br from-blue-500 via-indigo-500 to-purple-600 overflow-hidden">

  <!-- Floating background effects -->
  <div class="absolute inset-0 overflow-hidden">
    <div class="absolute bg-white/10 w-32 h-32 rounded-full blur-2xl top-10 left-10 animate-float-slow"></div>
    <div class="absolute bg-white/20 w-40 h-40 rounded-full blur-3xl bottom-20 right-20 animate-float-fast"></div>
    <div class="absolute bg-blue-300/10 w-24 h-24 rounded-full blur-xl bottom-10 left-1/3 animate-float-mid"></div>
  </div>

  <!-- Main card -->
  <div class="relative backdrop-blur-lg bg-white/20 border border-white/30 rounded-2xl shadow-2xl p-10 w-full max-w-md mx-auto animate__animated animate__fadeInUp">

    <!-- Flash alert -->
    <% if alert = flash[:alert] %>
      <p class="py-2 px-3 bg-red-100 text-red-600 font-medium rounded-lg text-center mb-4 animate__animated animate__shakeX"><%= alert %></p>
    <% end %>

    <!-- Header -->
    <h1 class="text-3xl font-extrabold text-white text-center mb-8 drop-shadow-md">
      Forgot your password?
    </h1>

    <!-- Instruction -->
    <p class="text-center text-blue-100 mb-6">
      Enter your registered email and weâ€™ll send you password reset instructions.
    </p>

    <!-- Form -->
<%= form_with url: passwords_path, class: "space-y-6" do |form| %>
  <div>
    <%= form.email_field :email_address,
      required: true,
      autofocus: true,
      autocomplete: "username",
      placeholder: "Enter your email address",
      value: params[:email_address],
      class: "block w-full rounded-lg border border-white/40 bg-white/30 placeholder-white/70 text-white focus:ring-2 focus:ring-yellow-300 focus:outline-none px-4 py-3 shadow-inner" %>
  </div>

  <!-- Submit -->
  <div class="text-center mt-5">
    <%= form.submit "Email Reset Instructions",
       class: "w-full sm:w-auto rounded-lg bg-yellow-400 text-blue-900 font-semibold py-3 px-8 shadow-lg hover:bg-yellow-300 hover:scale-105 transition-all duration-300 ease-in-out cursor-pointer" %>
  </div>
<% end %>


    <!-- Back to login -->
    <div class="text-center mt-6">
      <%= link_to "Back to Sign In", new_session_path,
          class: "text-sm text-blue-100 hover:text-yellow-200 underline transition-colors duration-200" %>
    </div>
  </div>
</div>

<!-- Floating animations -->
<style>
  @keyframes float-slow {
    0%, 100% { transform: translateY(0) rotate(0deg); }
    50% { transform: translateY(-20px) rotate(10deg); }
  }
  @keyframes float-mid {
    0%, 100% { transform: translateY(0) rotate(0deg); }
    50% { transform: translateY(15px) rotate(-5deg); }
  }
  @keyframes float-fast {
    0%, 100% { transform: translateY(0) rotate(0deg); }
    50% { transform: translateY(-30px) rotate(15deg); }
  }

  .animate-float-slow { animation: float-slow 8s ease-in-out infinite; }
  .animate-float-mid { animation: float-mid 6s ease-in-out infinite; }
  .animate-float-fast { animation: float-fast 4s ease-in-out infinite; }
</style>
